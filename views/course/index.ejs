<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="course/create" class="btn btn-primary new">
        Create a new course
      </a>

      <h2>Recent entries</h2>
      <p>There are
        <%= course.length %> courses.
        <br>
      </p>
      <% for (let i = course.length-1; i >= 0; i--) {   
        courses = course[i];   %>

      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="text-muted pull-right"></div>
        <div class="panel-body">

          <br> ID: <%=  courses._id %>
          <br> Course Number: <%=courses.courseNum%>
          <br> Course Name: <%=courses.courseName%>
          <br> Department: <%=courses.department%>
          <br> Instructor: <%=courses.instructor%>
          <br> Seats: <%=courses.seats %>
          <br> Location: <%=courses.location %>

          <hr>
          <a href="/course/delete/<%= courses._id  %>" class="btn btn-danger"> Delete </a>
          <a href="/course/details/<%= courses._id %>" class="btn btn-info"> Details </a>
          <a href="/course/edit/<%= courses._id %>" class="btn btn-primary"> Edit </a>
          <hr>
          <hr>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>